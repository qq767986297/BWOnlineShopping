<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <com.bawei.bwonlineshopping.customview.CustomViewGroup
        android:layout_width="match_parent"
        android:id="@+id/cvg"
        android:layout_height="wrap_content"></com.bawei.bwonlineshopping.customview.CustomViewGroup>
    </LinearLayout>

    <com.bawei.bwonlineshopping.customview.FlowLayout
        android:layout_width="match_parent"
        android:id="@+id/fl"
        android:layout_height="@dimen/dp200"></com.bawei.bwonlineshopping.customview.FlowLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.stx.xhb.xbanner.XBanner
                    android:layout_width="match_parent"
                    android:id="@+id/xb"
                    android:layout_height="200dp">

                </com.stx.xhb.xbanner.XBanner>
                <TextView
                    android:layout_marginTop="@dimen/dp30"
                    android:background="@mipmap/ht"
                    android:textSize="@dimen/sp20"
                    android:text="热销商品"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:id="@+id/rv_fashion"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>